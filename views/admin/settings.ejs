<body>

  <%- include navigation.ejs %>

  <div class="container">
    <div class="panel panel-default widget">
      <div class="panel-heading">
        
        <div class="panel-title">
          <span class="glyphicon glyphicon-cog"></span>
           Settings
        </div>
      </div>

      <div class="panel-body">
        <form id="frm-settings" role="form">
            <div class="col-md-12">
                <div style="">
                      <legend>APP URL </legend>

                        <div class="form-group col-md-6">
                            <input id="root-url" name="root-url" type="url" placeholder="" class="form-control" value="<%= settings.url %>" required >
                        </div>
                        <legend>Facebook <a href="http://ocb.uservoice.com/knowledgebase/articles/280143-setting-up-facebook-login"><span class="glyphicon glyphicon-question-sign" style="font-size: 16px;"></span></a></legend>
                        <div class="form-group col-md-6">
                            <label class="control-label " for="fb-client-id">App ID</label>
                            <input id="fb-client-id" name="fb-client-id" type="text" placeholder="" class="form-control" value="<% if (user.username=='demo') { %> demo users cannot modify these values <% } else {  %><%= settings.passport.facebook.clientID %><% } %>" required >
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label " for="">App Secret</label>
                            <input id="fb-client-secret" name="fb-client-secret" type="text" placeholder="" class="form-control" value="<% if (user.username=='demo') { %> demo users cannot modify these values <% } else {  %><%= settings.passport.facebook.clientSecret %> <% } %>" >
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label " for="fb-callback">Callback URL</label>
                            <input id="fb-client-secret" name="fb-callback" type="text" placeholder="" class="form-control" value="<%= settings.url %>/auth/facebook" disabled>
                        </div>
                        <div class="clearfix"></div>
                </div>

                <fieldset>
                        <legend>Twitter <a href="http://ocb.uservoice.com/knowledgebase/articles/280144-setting-up-twitter-login"><span class="glyphicon glyphicon-question-sign" style="font-size: 16px;"></span></a></legend>
                        <div class="form-group col-md-6">
                            <label class="control-label" for="">Consumer Key</label>
                            <input id="tw-consumerkey" name="tw-consumerkey" type="text" placeholder="" class="form-control" value="<% if (user.username=='demo') { %> demo users cannot modify these values <% } else {  %><%= settings.passport.twitter.consumerKey %><% } %>
                             ">
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label " for="tw-consumer-secret">Consumer Secret</label>
                            <input id="tw-consumer-secret" name="tw-consumer-secret" type="text" placeholder="" class="form-control" value="<% if (user.username=='demo') { %> demo users cannot modify these values <% } else { %> <%= settings.passport.twitter.consumerSecret %> <% } %>" >
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label " for="tw-callback">Callback URL</label>
                            <input id="fb-client-secret" name="tw-callback" type="text" placeholder="" class="form-control" value="<%= settings.url %>/auth/twitter" disabled>
                        </div>
                        <div class="clearfix"></div>
                </fieldset>

            </div>
            <div class="col-md-12">
                <fieldset>
                        <legend>Google <a href="http://ocb.uservoice.com/knowledgebase/articles/280145-setting-up-google-login"><span class="glyphicon glyphicon-question-sign" style="font-size: 16px;"></span></a></legend>
                        <div class="form-group col-md-6">
                            <label class="control-label " for="google-client-id">clientID</label>
                            <input id="google-client-id" name="google-client-id" type="text" placeholder="" class="form-control" value="<% if (user.username=='demo') { %> demo users cannot modify these values <% } else { %><%= settings.passport.google.clientID %><% } %>">
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label " for="google-client-secret">Client Secret</label>
                            <input id="google-client-secret" name="google-client-secret" type="text" placeholder="" class="form-control" value="<% if (user.username=='demo') { %> demo users cannot modify these values <% } else { %><%= settings.passport.google.clientSecret %><% } %>">
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label " for="google-callback">Callback URL</label>
                            <input id="fb-client-secret" name="google-callback" type="text" placeholder="" class="form-control" value="<%= settings.url %>/auth/google" disabled>
                        </div>
                        <div class="clearfix"></div>
                </fieldset>
            </div>
            
        <div class="clearfix"></div>
            <!-- Button -->
            <div class="form-group col-md-12">
                <button class="btn btn-primary" type="submit" id="save-settings">Save Settings
                </button>
            </div>
        </form>
      </div>

    </div>
  </div>
